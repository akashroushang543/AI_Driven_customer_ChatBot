{
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "TextBlock",
      "text": "Employee Information",
      "size": "Large",
      "weight": "Bolder",
      "color": "Accent"
    },
    {
      "type": "TextBlock",
      "text": "Name:",
      "weight": "Bolder"
    },
    {
      "type": "TextBlock",
      "text": "${employeeName}"
    },
    {
      "type": "TextBlock",
      "text": "Mobile No:",
      "weight": "Bolder"
    },
    {
      "type": "TextBlock",
      "text": "${mobileNo}"
    },
    {
      "type": "TextBlock",
      "text": "Department:",
      "weight": "Bolder"
    },
    {
      "type": "TextBlock",
      "text": "${department}"
    },
    {
      "type": "TextBlock",
      "text": "Role:",
      "weight": "Bolder"
    },
    {
      "type": "TextBlock",
      "text": "${role}"
    }
  ]
}
